@model MealSocialServerMVC.Models.CaloriesViewModel

<div class="calorie-widget card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Calories Tracker</h5>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="text-center">
                <!-- Calorie Circle -->
                <div class="position-relative d-inline-block">
                    <div class="progress rounded-circle" style="height: 100px; width: 100px;">
                        <div class="progress-bar bg-success" role="progressbar" 
                             style="width: @Model.CompletionPercentage%;" 
                             aria-valuenow="@Model.CompletionPercentage" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                        </div>
                    </div>
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <h4 class="mb-0">@Model.RemainingCalories</h4>
                        <small>Left</small>
                    </div>
                </div>
            </div>
            
            <div class="d-flex flex-column">
                <div class="mb-2">
                    <span class="fw-bold">Goal:</span> @Model.DailyGoal
                </div>
                <div class="mb-2">
                    <span class="fw-bold">Food:</span> @Model.CaloriesConsumed
                </div>
                <div>
                    <span class="fw-bold">Exercise:</span> @Model.CaloriesBurned
                </div>
            </div>
        </div>
        
        <div class="text-center">
            <a href="@Url.Action("Dashboard", "Calorie", new { username = Model.Username })" 
               class="btn btn-sm btn-outline-primary">View Details</a>
        </div>
    </div>
</div>
