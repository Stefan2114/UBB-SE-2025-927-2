@model MealSocialServerMVC.Models.UpdateBodyMetricViewModel

@{
    ViewData["Title"] = "Enter Body Information";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 text-center">Your Body Information</h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-center mb-4">Please provide your body metrics to help us tailor recommendations specifically for you.</p>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert @(ViewBag.Message.Contains("Error") ? "alert-danger" : "alert-success")" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    
                    <form asp-action="Update" asp-controller="UpdateBodyMetric" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Username" />

                        <div class="form-group mb-4">
                            <label asp-for="Weight" class="form-label">Weight (kg)</label>
                            <input asp-for="Weight" class="form-control form-control-lg" placeholder="Enter your weight" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Height" class="form-label">Height (cm)</label>
                            <input asp-for="Height" class="form-control form-control-lg" placeholder="Enter your height" />
                            <span asp-validation-for="Height" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="TargetWeight" class="form-label">Target Weight (kg) <span class="text-muted">(Optional)</span></label>
                            <input asp-for="TargetWeight" class="form-control form-control-lg" placeholder="Enter your target weight" />
                            <span asp-validation-for="TargetWeight" class="text-danger"></span>
                            <small class="form-text text-muted">Leave blank if you don't have a specific target.</small>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg">Continue</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
