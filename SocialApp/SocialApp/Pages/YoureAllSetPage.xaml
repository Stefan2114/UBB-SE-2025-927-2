<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SocialApp.Pages.YoureAllSetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SocialApp.ViewModels"
    mc:Ignorable="d"
    Background="white">

    <Page.DataContext>
        <vm:YoureAllSetViewModel/>
    </Page.DataContext>

    <Grid Background="#F9E5DA">

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,120,0,0">
            <TextBlock Text="You're all set"
               FontSize="80"
               FontWeight="Bold"
               Foreground="#133224"
               TextAlignment="Center"
               Margin="0,0,0,0"/>

            <TextBlock Text="Based on your goals and preferences, weâ€™ll help you stay on &#x0a; track with the right meals and nutrition."
               FontSize="22"
               FontWeight="Bold"
               Foreground="Gray"
               TextAlignment="Center"
               Margin="0,0,0,0"/>

        </StackPanel>

        <!-- Main page Button -->
        <Button Content="Go to main page" FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            BorderThickness="0"
            CornerRadius="7"
            Padding="10,10,10,10"
            Margin="0,0,0,180"
            Background="#EB9477"
            Foreground="white"
            Command="{Binding NextCommand}"
        />


    </Grid>


</Page>
